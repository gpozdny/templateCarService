section(class="feedback" id="feedback")
    .feedback__title
        h2.feedback__title-text.title Отзывы
    .feedback__slider-bg
        .feedback__slider(id='feedback__slider')
            .feedback__slider-arrows
                .arrow__left
                    i(class="fa fa fa-arrow-circle-left")
                .arrow__right
                    i(class="fa fa fa-arrow-circle-right")
